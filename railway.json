{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "cron": [
    {
      "name": "update-prices",
      "schedule": "*/5 * * * *",
      "command": "node scripts/update-prices-cron.js"
    }
  ]
}
